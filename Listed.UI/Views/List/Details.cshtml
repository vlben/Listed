@model Listed.UI.Models.Viewmodels.ListOverviewModel

<div class="container">
	@{
		ViewData["Title"] = Model.AnimeName;
		var imgsrc = string.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(Model.AnimeCoverArt));
	}


		<div class="row">
			<div class="col">
				<img src="@imgsrc" class="rounded float-end" />

			</div>

			<div class="col">
				<h1>@Model.AnimeName</h1>
				<h5>Episodes watched: </h5>
				<h6>@Model.EpisodesWatched / @Model.AnimeEpisodes</h6>

				<h5>User rating: </h5>
				<h6>@Model.UserRating / 10</h6>

				<h5>Status: </h5>
				<h6 class="text-capitalize fw-bold">@Model.Status</h6>
				<a asp-controller="List" asp-action="Edit" asp-route-id="@Model.ListItemId">
					<input type="submit" class="btn btn-primary" value="Edit"/>
				</a>

				<a asp-controller="List" asp-action="DeleteListItem" asp-route-id="@Model.ListItemId">
					<input type="submit" class="btn btn-danger" value="Delete" />
				</a>
			</div>
		</div>


	<a asp-controller="List" asp-action="Index">
		<input type="submit" value="Return" class="btn btn-primary" />
	</a>
</div>
