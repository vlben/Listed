<div class="container">


	<form>
		<div class="form-group">
			<label for="inputEpisodes">Episodes</label>
			<input type="text" class="form-control" id="inputEpisodes" placeholder="0">
		</div>
		<div class="form-group">
			<label for="inputRating">Rating</label>
			<input type="text" class="form-control" id="inputRating" placeholder="0">
			<small class="form-text text-muted">Rating should be between 1 - 10</small>
		</div>
		<div class="form-group">
			<select class="custom-select mr-sm-2" id="inlineFormCustomSelect">
				<option selected>Planning</option>
				<option value="2">Watching</option>
				<option value="3">Completed</option>
			</select>
		</div>

		<button type="submit" class="btn btn-primary">Submit</button>
	</form>

	<a asp-controller="List" asp-action="Index">
		<input type="submit" value="Return" class="btn btn-primary" />
	</a>
</div>
